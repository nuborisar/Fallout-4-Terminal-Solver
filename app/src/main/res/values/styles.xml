<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="all_caps_style">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="main_activity_title_style" parent="all_caps_style">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="main_activity_text_button_style" parent="all_caps_style">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="activity_header_title_style" parent="all_caps_style">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- For LinearLayout -->
    <style name="control_bar_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">@dimen/activity_padding</item>
        <item name="android:paddingEnd">@dimen/activity_padding</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="control_bar_button_style">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="elim_row_size_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/row_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/row_vertical_margin</item>
        <item name="android:paddingTop">@dimen/row_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/row_vertical_padding</item>
    </style>

    <style name="elim_row_text_style">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="activity_sub_title_text" parent="activity_header_title_style">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentTop">false</item>
    </style>
</resources>
